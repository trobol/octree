{
	"version": "2.0.0",
	"presentation": {
		"echo": true,
		"reveal": "always",
		"focus": true,
		"panel": "new"
	},
	"tasks": [
		{
			"label": "cmake",
			"type": "shell",
			"options": {
				"cwd": "${workspaceRoot}/build"
			},
			"command": "cmake",
			"args": [
				"-G",
				"Unix Makefiles",
				"-DCMAKE_BUILD_TYPE=Debug",
				".."
			],
			"problemMatcher": []
		},
		{
			"label": "make",
			"type": "shell",
			"args": [
				"-j",
				"8"
			],
			"options": {
				"cwd": "${workspaceRoot}/build"
			},
			"command": "make",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "run",
			"command": "${workspaceRoot}/build/octree.exe",
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}